<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>
<!-- エラーメッセージ部分-->
  <%= render 'layouts/error_messages', model: f.object %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <div class= "green_area"><%= f.submit 'Create Book' %></div>
<% end %>