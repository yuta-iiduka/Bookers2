<body>
  <div class="container">
    <div class="row">
      <!--サイドバー-->
      <div class="col-md-3">
        <%= render 'layouts/sideform', user: @user , book: @book %>
      </div>
      <!--一覧-->
      <div class="col-md-8 offset-md-1">
        <h1>Books</h1>
      <table class="table table-hover">
        <tr>
          <th></th>
          <th class="books_title">Title</th>
          <th class="books_body">Opinion</th>
          <th></th>
          <th></th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user.id) do %>
              <%= attachment_image_tag book.user, :profile_image, size: "60x60" ,fallback: "no_image.jpg" %>
            <% end %>
          </td>
          <td><%= link_to book.title,book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
      </div>
    </div>
  </div>
</body>