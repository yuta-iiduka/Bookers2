<body>
  <div class ="container">
    <div class="row">
      <!--サイドバー-->
      <div class="col-md-3">
        <%= render 'layouts/sideform', user: @user , book: @book %>
      </div>
      <!--一覧-->
      <div class="col-md-8 offset-md-1">
        <h1>Users</h1>
        <table class="table table-hover">
          <tr>
            <th class="user-image">image</th>
            <th class="user-name">name</th>
            <th></th>
          </tr>
          <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, size: "60x60" ,fallback: "no_image.jpg"%></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</body>